#/usr/bin/bash
docker stop bobo_container
docker rm bobo_container
xhost +local:root
docker run -it --network='host' \
-p 80:80 \
-p 9090:9090 \
--env='DISPLAY' \
--env='QT_X11_NO_MITSHM=1' \
--env='XDG_RUNTIME_DIR=/run/user/${UID}' \
--volume='/tmp/.X11-unix:/tmp/.X11-unix:rw' \
--volume='/home/khh/Desktop/Docker/bobo_simulation/developer_packages_for_container:/ros2_ws/src/developer_packages' \
--volume='/home/khh/Desktop/Docker/bobo_simulation/mytmux:/mytmux' \
--name bobo_container \
romrobotics/humble_bobo:latest bash   
docker stop bobo_container
docker rm bobo_container
# use latest or prereleasesimulation tag for docker images
